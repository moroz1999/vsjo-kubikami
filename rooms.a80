    module  rooms
room_w          equ 32
room_h          equ 24
room_size       equ room_w*room_h
room_bg_color1   equ 0
init_current_room
                ld  hl,rooms_data
                ld  de,screen_utils.attrs
                ld  bc,room_size
                ldir
                ret
get_room_address
                ; input:
                ; de - coordinates
                ; output:
                ; hl - address in memory
                call    screen_utils.get_texture_address
                ld  de,rooms_data
                add hl,de
                ret
get_room_color
                ; input:
                ; de - coordinates
                ; output:
                ; a - color of pixel
                call    get_room_address
                ld  a,(hl)
                ret
current_room
                db  0
    endmodule