    module  game_process
loop
                    ld  a,1
                    call    draw.border
                    call    animate.check
                    call    hero.check_hero_state
                    call    hero.switch_colors
                    call    hero.save_restore
                    call    hero.hero_gravity
                    call    hero.hero_move
room_logic_pointer  equ $+1
                    call    logic.empty_room_logic
                    call    draw.draw_state
                    xor a
                    call    draw.border
                    ld  b,1
                    call    wait
                    jr  loop
wait
                    ei
                    halt
                    djnz    wait
                    ret
endgame
                    call    draw.clear_screen
                    di
                    halt
    endmodule