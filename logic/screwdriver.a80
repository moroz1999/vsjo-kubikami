                        module	screwdriver
action
                            ld	a,(rooms.room_number_x)
                            cp	6
                            jr	nz,action_false
                            ld	a,(rooms.room_number_y)
                            cp	3
                            jr	nz,action_false

                ; hero must be between 2 and 11 x
                            ld	a,(hero.hero_x)
                            sub	2
                            jr	c,action_false
                            ld	a,(hero.hero_x)
                            sub	11
                            jr	nc,action_false
                
                ; hero must be at 20 y
                            
                            ld	a,(hero.hero_y)
                            cp	20
                            jr	nz,action_false

                            ; ld	d,17
                            ; ld	e,18
                            ; ld	b,4
                            ; ld	c,1
                            ; call	rooms.get_room_pixel_address
                            ; ld	(item_animation + @animation.room_address),hl
                            ; ld	hl,item_animation
                            ; call	animate.start

                            ld a,elevators.state_up
                            ld ix,elevators.elevator_6_3
                            ld (ix+elevators.elevator.state),a 

                            ld ix,elevators.elevator_4_1_1
                            ld (ix+elevators.elevator.state),a 

                            ld ix,elevators.elevator_4_1_2
                            ld (ix+elevators.elevator.state),a 
                            
                            ld ix,elevators.elevator_4_1_3
                            ld (ix+elevators.elevator.state),a 

                            call	hero.delete_item_in_pocket

                            ld	a,255
                            ret
action_false
                            xor	a
                            ret
